<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.java.sorteioskt">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SorteiosKT"
        tools:targetApi="31">
        <activity
            android:name=".ui.SorteiosUi.ParticipantesSorteioActivity"
            android:exported="false"
            android:theme="@style/MeuTheme" />
        <activity
            android:name=".ui.SorteiosUi.DetalhesSorteioActivity"
            android:exported="false"
            android:theme="@style/MeuTheme" />
        <activity
            android:name=".ui.SorteiosUi.SorteiosSalvosActivity"
            android:exported="false"
            android:theme="@style/MeuTheme"/>
        <activity
            android:name=".ui.SorteiosUi.CriarSorteioActivity"
            android:exported="false"
            android:theme="@style/MeuTheme" />
        <activity
            android:name=".ui.authenticationUi.CadastroActivity"
            android:exported="false"
            android:theme="@style/MeuTheme" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/MeuTheme" />
        <activity
            android:name=".ui.authenticationUi.LoginActivity"
            android:exported="true"
            android:theme="@style/MeuTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>