<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textFundoCorParticipantes"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_custom_degrade_verde"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/ic_arrow_direita_branco_24"
            android:elevation="9dp"
            android:text="Participante"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textFundoCorParticipantes"
            app:layout_constraintTop_toTopOf="@+id/textFundoCorParticipantes" />

        <TextView
            android:id="@+id/txtNomeParticipante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="9dp"
            android:text="nome participante"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt7sd"
            app:layout_constraintEnd_toEndOf="@+id/textFundoCorParticipantes"
            app:layout_constraintStart_toEndOf="@+id/txt7sd"
            app:layout_constraintTop_toTopOf="@+id/txt7sd" />

        <TextView
            android:id="@+id/textViewas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_branco_18"
            android:elevation="9dp"
            android:text="CPF: "
            android:textColor="#FFEB3B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtCpfParticipante"
            app:layout_constraintStart_toStartOf="@+id/txt7sd"
            app:layout_constraintTop_toTopOf="@+id/txtCpfParticipante" />

        <TextView
            android:id="@+id/textViewLoja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_branco_18"
            android:elevation="9dp"
            android:text="Endereço: "
            android:textColor="#FFEB3B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewas"
            app:layout_constraintTop_toTopOf="@+id/txtEnderecoParticipante" />

        <TextView
            android:id="@+id/textViewCod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:elevation="9dp"
            android:text="Cód sorteio:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAdapter"
            app:layout_constraintEnd_toStartOf="@+id/textViewCodigoParticipante"
            app:layout_constraintTop_toTopOf="@+id/textViewAdapter" />

        <TextView
            android:id="@+id/textViewCodigoParticipante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="9dp"
            android:text="Código"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textViewCod"
            app:layout_constraintEnd_toEndOf="@+id/textFundoCorParticipantes"
            app:layout_constraintTop_toTopOf="@+id/textViewCod" />

        <TextView
            android:id="@+id/txtCpfParticipante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:elevation="4dp"
            android:text="cpf"
            android:textColor="#FFEB3B"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textViewas"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeParticipante" />

        <TextView
            android:id="@+id/txtEnderecoParticipante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:elevation="4dp"
            android:text="endereço"
            android:textColor="#FFEB3B"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/textFundoCorParticipantes"
            app:layout_constraintStart_toEndOf="@+id/textViewLoja"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/txt7sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_arrow_branco_18"
            android:elevation="4dp"
            android:text="Nome: "
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textViewAdapter"
            app:layout_constraintTop_toBottomOf="@+id/textViewAdapter" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_arrow_branco_18"
            android:elevation="4dp"
            android:text="Tel: "
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtTelefoneParticipante"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeParticipante" />

        <TextView
            android:id="@+id/txtTelefoneParticipante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:elevation="4dp"
            android:gravity="center"
            android:text="telefone"
            android:textColor="#FFEB3B"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textFundoCorParticipantes"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>